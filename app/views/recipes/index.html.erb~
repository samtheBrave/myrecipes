  <div class="row">
    <div class="col-md-2">
      <section class="chef_info left">
        <%= gravatar_for recipe.chef, size: 100 %>
        <h5>Chef name: <%= recipe.chef.chefname %></h5>
      </section>
     </div>
    
  
    <div class="col-lg-6  well">
      <h4><%= link_to recipe.name, recipe_path(recipe) %></h4>
      <p><%= recipe.summary %></p>
      <p>
    <span class="quiet"><small><%= time_ago_in_words(recipe.created_at) %> ago</small></span> 
      </p>
    </div>
    <div class="col-lg-4">
      <%= image_tag(recipe.picture.url, size: '125x125',class:"gravatar") if recipe.picture? %>
    </div>
    <hr/>
  </div>
<% end %>  
